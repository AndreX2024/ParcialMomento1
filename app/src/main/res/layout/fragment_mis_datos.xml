<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/tv_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/angkor"
        android:text="Bienvenido!"
        android:textColor="@color/white"
        android:textSize="48dp"/>

    <TableLayout
        android:id="@+id/tl_profile"
        style="@style/TableStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="44dp"
        android:divider="?android:attr/dividerVertical"
        android:padding="16dp">

        <TableRow style="@style/TableRowStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/angkor"
                android:padding="8dp"
                android:text="Nombre:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_username_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:padding="8dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow style="@style/TableRowStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/angkor"
                android:padding="8dp"
                android:text="Apellido:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_userlastname_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:padding="8dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow style="@style/TableRowStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/angkor"
                android:padding="8dp"
                android:text="Correo:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_email_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:padding="8dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow style="@style/TableRowStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/angkor"
                android:padding="8dp"
                android:text="Programa Academico:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_program_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:padding="8dp"
                android:textColor="@color/black" />
        </TableRow>

        <TableRow style="@style/TableRowStyle">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/angkor"
                android:padding="8dp"
                android:text="Semestre:"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_semester_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/annapurna_sil"
                android:padding="8dp"
                android:textColor="@color/black" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/bt_edit_userData"
        style="@style/ButtonRounded"
        android:layout_width="166dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/annapurna_sil"
        android:includeFontPadding="false"
        android:text="Editar"
        android:textSize="34sp"/>

    <Button
        android:id="@+id/bt_planner"
        style="@style/ButtonRounded"
        android:layout_width="240dp"
        android:layout_height="59dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/annapurna_sil"
        android:includeFontPadding="false"
        android:text="@string/start_training"
        android:textSize="34sp"/>

</LinearLayout>